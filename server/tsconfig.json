{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": ["ES2020"],
    "target": "ES2020",
    "paths": {
      "shared": ["../shared/dist/index.d.ts"],
      "shared/*": ["../shared/dist/*"],
      "@shared/schema": ["../shared/schema.ts"],
      "@shared/*": ["../shared/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "../shared" }
  ]
}
