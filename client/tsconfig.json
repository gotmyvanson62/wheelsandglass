{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["./src/*"],
      "shared": ["../shared/dist/index.d.ts"],
      "shared/*": ["../shared/dist/*"]
    },
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "noImplicitAny": false,
    "noImplicitThis": false
  },
  "include": ["src"],
  "references": [
    { "path": "../shared" }
  ]
}
